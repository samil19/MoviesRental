@model MoviesRental.Models.RandomMovieViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    table {
        background: transparent;
        width: 100%;
    }
    td {
        border-bottom: solid white;
    }
    .main {
        padding: 10px;
    }
</style>
<h2>Customers</h2>
<div class="main">
    <table>
        <tr>
            <td>
                <h3>Customer</h3>
            </td>
        </tr>
        @foreach (var customer in @Model.Customers)
        {
            <tr>
                <td><h4>@Html.ActionLink(@customer.Name, "Details", "RandomMovie", new { name = @customer.Name }, @customer.Name)</h4></td>
            </tr>
        }
    </table>
</div>